<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PhoneActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <kidtoys.az.kidphone.FunnyButton
        android:layout_width="259dp"
        android:layout_height="120dp"
        app:InnerShapeProperty="Circle"
        app:OuterShapeProperty="Rounded"
        app:belowText="ABC"
        app:belowTextColor="#0000ff"
        app:belowTextSize="28sp"
        app:centerText="1"
        app:centerTextColor="#ff0000"
        app:centerTextSize="40sp"
        app:outerShapeColor="#FFBF00"
        android:id="@+id/b1"
        />

    <kidtoys.az.kidphone.FunnyButton
        android:layout_margin="10dp"
        android:id="@+id/b2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:InnerShapeProperty="None"
        app:OuterShapeProperty="None"
        app:belowText="ABC"
        app:belowTextColor="#00ff00"
        app:centerText="1"
        app:centerTextColor="#ff0000"
        app:outerShapeColor="#00ff00"  />

    <kidtoys.az.kidphone.FunnyButton
        android:id="@+id/b3"
        android:layout_width="148dp"
        android:layout_height="150dp"
        app:InnerShapeProperty="Circle"
        app:OuterShapeProperty="BottomRounded"
        app:belowText="ABC"
        app:belowTextColor="#00ff00"
        app:centerText="1"
        app:centerTextSize="40sp"
        app:belowTextSize="32sp"
        app:outerShapeColor="#00ff00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:textSize="40sp"
          />
</LinearLayout>
