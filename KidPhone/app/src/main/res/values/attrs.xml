<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="InnerShapeProperty" format="enum">
        <enum name="None" value="0"/>
        <enum name="Square" value="1"/>
        <enum name="Rectangle" value="2"/>
        <enum name="Circle" value="3"/>
        <enum name="Triangle" value="4"/>
        <enum name="Pentagon" value="5"/>
        <enum name="Star" value="6"/>
        <enum name="Trapes" value="7"/>
        <enum name="Ellipse" value="8"/>
        <enum name="Heart" value="9"/>
        <enum name="YesPhone" value="10"/>
        <enum name="NoPhone" value="11"/>
        <enum name="Sound" value="12"/>
        <enum name="Picture" value="13"/>
        <enum name="Hexagon" value="14"/>
    </attr>

    <attr name="OuterShapeProperty" format="enum">
        <enum name="None" value="0"/>
        <enum name="Rounded" value="1"/>
        <enum name="BottomRounded" value="2"/>
        <enum name="YesButton" value="3"/>
        <enum name="NoButton" value="4"/>
        <enum name="Picture" value="5"/>
    </attr>

    <attr name="BehaviorMode" format="enum">
        <enum name="Normal" value="0"/>
        <enum name="Figures" value="1"/>
        <enum name="Numbers" value="2"/>
        <enum name="Letters" value="3"/>
        <enum name="System" value="4"/>
    </attr>

    <declare-styleable name="FunnyButton">
        <attr name ="InnerShapeProperty" />
        <attr name="OuterShapeProperty" />
        <attr name="BehaviorMode" />
        <attr name="NumbersText" format="string" />
        <attr name="LettersText" format="string" />
        <attr name="TextSize" format="dimension"/>
        <attr name="TextColor" format="reference|color"/>
        <attr name="innerShapeColor" format="reference|color" />
        <attr name="outerShapeColor" format="reference|color" />
    </declare-styleable>
</resources>